package aiman;

import java.util.Scanner;

public class Main {
    
    public static void main(String[] args){
        
        Scanner input = new Scanner (System.in);
    
        System.out.println("berapa diameter : ");
    										int diameter = input.nextInt();
        int R = diameter/2;
        
        System.out.println();
        System.out.println("keliling lingkaran tersebut adalah :");
        System.out.println(3.14*(R*R));
        
    }
    
}
